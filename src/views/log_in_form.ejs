<form 
  action="/user/log-in" 
  method="POST"
  class="
    max-w-md
    mx-auto
    p-4
    mt-10
    bg-white
    shadow-md
    rounded-md
  ">
  <fieldset class="border border-gray-300 rounded p-4 mb-6">
    <legend class="text-lg font-semibold text-gray-700">Please log in</legend>

    <%- include("partials/form_label", { 
      labelInfo: { 
        for: "username", 
        text: "Username" 
      } 
    }) %>

    <%- include("partials/form_input", { 
      inputInfo:{
        type: "text",
        id: "username",
        name: "username",
        placeholder: "username",
        value: username || '', 
        required: "required"
      }
    })%>
  
    <%- include("partials/form_label", { 
      labelInfo: { 
        for: "password", 
        text: "Password" 
      } 
    }) %>

    <%- include("partials/form_input", { 
      inputInfo:{
        type: "password",
        id: "password",
        name: "password",
        required: "required"
      }
    })%>
  </fieldset>
  
  <%- include("partials/form_button", { btnInfo: { text: "Log in", color: "pink", type: "submit" } })%>

  <h2 class="text-m mt-4">
    Don't have an account yet? <a href="/user/sign-up" class="text-pink-600"> Create one now!</a>
  </h2>
  
  <%- include("form_error_message", { errors: errors }) %>
</form>
