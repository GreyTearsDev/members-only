<form
  action="/user/previleges"
  method="POST"
  class="
    max-w-md
    mx-auto
    p-4
    bg-white
    shadow-md
    roudend-md
  ">
  <% if (!currentUser.is_member) { %>
    <fieldset class="border border-gray-300 rounded p-4 mb-6">
      <legend class="text-lg font-semibold text-gray-700">Become a Member</legend>
      <%- include("partials/form_label", { labelInfo: { for: "member", text: "Password" }})%>
      <%- include("partials/form_input", { inputInfo: { type: "text", id: "member", name: "member"} })%>
      <%- include("partials/form_secret_password", {password: "coolmember"})%>
    </fieldset>

  <% } else { %>
  <h1 class="text-xl font-bold text-green-600 mb-4">Your are now a memberðŸŽ‰</h1>

    <fieldset class="border border-gray-300 rounded p-4 mb-6">
      <legend class="text-lg font-semibold text-gray-700">Become an Administrator</legend>
      <%- include("partials/form_label", { labelInfo: { for: "member", text: "Password" }})%>
      <%- include("partials/form_input", { inputInfo: { type: "text", id: "admin", name: "admin"} })%>
      <%- include("partials/form_secret_password", {password: "cooladmin"})%>
    <fieldset>
  <% } %>

  <%- include("partials/form_button", { btnInfo: { text: "Confirm", color: "gray", type: "submit" } })%>

<a href="/">
  <%- include("partials/form_button", { btnInfo: { text: "Cancel", color: "pink", type: "" } })%>
</a>
</form>

